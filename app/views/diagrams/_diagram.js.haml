          .style("width", width + margin.left + margin.right)
          .style("margin", "0 auto")
          .style("height", height + margin.top + margin.bottom)
          .style("display","block")
          .style("overflow-x","visible")
        .append("g")
          .attr("transform", "translate(" + margin.left + "," + margin.top + ")");


%h2 Listing diagrams

%table.datatable.responsive.no-wrap
  %thead
    %tr
      %th Name
      %th Category
      %th
      %th
      %th
      %th
  %tbody
    - @diagrams.each do |diagram|
      %tr
        %td= diagram.name
        %td= diagram.category
        %td{:style => "font-size:x-large;"}= link_to 'Show', diagram
        %td
          - diagram.data_files.each do |df|
            = link_to "Download #{df.name}", download_diagram_path(diagram, :data_file_id => df.id)
            %br
        %td= link_to 'Edit', edit_diagram_path(diagram)
        %td= link_to 'Destroy', diagram, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Diagram', new_diagram_path, :style => "font-size: x-large"

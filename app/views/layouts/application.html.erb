<!DOCTYPE html>
<html>
<head>
  <title><%= Rails.env == "development" ? "Dev" : ""%> RibbonDiagram</title>
  <%= stylesheet_link_tag    'application', :media => 'all' %>
  <%= stylesheet_link_tag params[:controller] %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag params[:controller] %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="main_header">
    <% if current_user.present? && current_user.super_admin %>
        <p>You are: <%= current_user.email %></p>
    <% end %>

    <div id="flash">
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => name %>
        <% end %>
    </div>


    <h1 id="site_title">
        Ribbon Tool
    </h1>
</div>

<% if user_signed_in? %>
  <div class="slicknav">

  </div>
  <ul id="menu" style="display:none;">
      <li><%= link_to 'Users', users_path %></li>
      <li><%= link_to 'AccessLevels (WORK IN PROGRESS)', access_levels_path %></li>
      <li> Diagrams
          <ul>
              <li><%= link_to 'List', diagrams_path %></li>
              <li><%= link_to 'Create', new_diagram_path %></li>
          </ul>
      </li>
      <% if current_user.super_admin %>
        <li><%= link_to 'Institutions', institutions_path %></li>
        <li><%= link_to 'UserDiagrams', user_diagrams_path %></li>
      <% end %>
      <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
  </ul>
<% end %>


<div class="page-content">
    <%= yield %>
</div>

<div id="main_footer">
    <p id="copyright">
        COPYRIGHT Â©, 2015. THE REGENTS OF THE UNIVERSITY OF CALIFORNIA. ALL RIGHTS RESERVED.
    </p>
</div>


</body>
</html>

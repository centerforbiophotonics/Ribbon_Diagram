= form_for @access_level do |f|
  - if @access_level.errors.any?
    #error_explanation
      %h2= "#{pluralize(@access_level.errors.count, "error")} prohibited this access_level from being saved:"
      %ul
        - @access_level.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :code
    = f.number_field :code
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :institution_id
    = f.number_field :institution_id
  .actions
    = f.submit 'Save'
